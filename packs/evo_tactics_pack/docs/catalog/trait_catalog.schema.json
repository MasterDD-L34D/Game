{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/trait_catalog.schema.json",
  "title": "Evo Tactics â€” Trait Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "trait_glossary", "traits"],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "schema_uri": {
      "type": "string",
      "format": "uri-reference"
    },
    "trait_glossary": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      ]
    },
    "traits": {
      "type": "object",
      "additionalProperties": {
        "$ref": "trait_entry.schema.json"
      },
      "propertyNames": {
        "pattern": "^[a-z0-9_]+$"
      }
    }
  }
}
