    "energy_upkeep_level": {
      "type": "string",
      "enum": [
        "Basso",
        "Medio",
        "Alto"
      ]
    },
    "danger_level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5
    },
    "metric_unit": {
      "type": "string",
      "enum": [
        "1",
        "m",
        "kg",
        "s",
        "A"
      ]
    },
    "ecotype_cluster": {
      "type": "string",
      "enum": [
